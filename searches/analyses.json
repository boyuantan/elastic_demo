/*Character filters*/

curl -XPOST localhost:9200/demo/_settings -d '{
  "analysis" : {
    "char_filter" : {
      "mapper_demo" : {
        "type" : "mapping",
        "mappings" : [
          "@ => a",
          "3 => e"
        ]
      },
      "pattern_demo" : {
        "type" : "pattern_replace",
        "pattern" : "(?<=\\p{Lower})(?=\\p{Upper})",
        "replacement" : " "
      }
    }
  }
}'

