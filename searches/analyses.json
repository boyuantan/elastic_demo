/*Character filters*/

curl -XPUT localhost:9200/demo/_settings -d '{
  "analysis" : {
    "char_filter" : {
      "mapper_demo" : {
        "type" : "mapping",
        "mappings" : [
          "@ => a",
          "3 => e"
        ]
      },
      "pattern_demo" : {
        "type" : "pattern_replace",
        "pattern" : "(?<=\\p{Lower})(?=\\p{Upper})",
        "replacement" : " "
      }
    }
  }
}'

/*Tokenizers*/

curl -XPUT localhost:9200/demo/_settings -d '{
  "analysis" : {
    "tokenizer" : {
      "tokenizer_demo" : {
        "type" : "pattern",
        "pattern" : "(?<=\\p{Lower})(?=\\p{Upper})"
      }
    }
  }
}'

/*Token filters*/

curl -XPUT localhost:9200/demo/_settings -d '{
  "analysis" : {
    "filter" : {
      "filter_demo" : {
        "type" : "edgeNGram",
        "min_gram" : 2,
        "max_gram" : 5
      }
    }
  }
}'

/*Different analyzer*/

{
  "analysis" : {
    "analyzer" : {
      "analyzer_demo" : {
        "type" : "custom",
        "char_filter" : [ "mapper_demo", "pattern_demo" ],
        "tokenizer" : "standard",
        "filter" : [ "lowercase", "edgeNGram" ]
      }
    }
  }
}

curl -XPUT localhost:9200/demo/_settings?pretty -d '{
  "analysis" : {
    "analyzer" : {
      "analyzer_demo" : {
        "type" : "custom",
        "char_filter" : [ "mapper_demo" ],
        "tokenizer" : "standard",
        "filter" : [ "lowercase", "filter_demo" ]
      }
    }
  }
}'

